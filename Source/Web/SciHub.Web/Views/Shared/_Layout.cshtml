<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SciHub</title>
    @Styles.Render("~/Content/superhero")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/jquery-ui")
    @Styles.Render("~/Content/kendo-css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/sigalr")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/jquery-ui")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SciHub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new {area = ""}, null)</li>
                    <li>@Html.ActionLink("ShortStories", "Index", "Home", new {area = "ShortStory"}, null)</li>
                    <li>@Html.ActionLink("Books", "Index", "Home", new {area = "Book"}, null)</li>
                    <li>@Html.ActionLink("Movies", "Index", "Home", new { area = "Movie" }, null)</li>
                    <li>@Html.ActionLink("Shows", "Index", "Home", new {area = "Tvshow"}, null)</li>
                    <li>@Html.ActionLink("Chat", "Chat", "Chat", new { area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SciHub</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>