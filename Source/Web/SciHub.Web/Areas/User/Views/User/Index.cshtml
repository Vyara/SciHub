@using Microsoft.AspNet.Identity
@model SciHub.Web.Areas.User.ViewModels.UserDetailsViewModel
@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome, @Model.FirstName</h2>
<div class="well row">
    <div class="col col-lg-3">
        <img src="@Model.Avatar" alt="@User.Identity.GetUserName()" style="width: 50%" />
    </div>
    <div class="col col-lg-8">
        <p>FirstName: @Model.FirstName</p>
        <p>LastName: @Model.LastName</p>
        <p>About: @Model.About</p>
    </div>
</div>
<div class="row">
    @Html.ActionLink("Create a story", "CreateStory", "User", new { id = @User.Identity.GetUserId() }, new { @class = "btn btn-default" })
</div>
