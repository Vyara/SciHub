@using SciHub.Data.Models.Common
@using SciHub.Data.Models.Enumerators
@model SciHub.Web.Areas.User.ViewModels.ShortStoryInputViewModel
@{
    ViewBag.Title = "Create Story";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("CreateStory", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new story</h4>
    <hr />
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TagIds, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ListBoxFor(m => m.TagIds,  new SelectList(Model.Tags, "Id", "Name"))
    </div>
        </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}
