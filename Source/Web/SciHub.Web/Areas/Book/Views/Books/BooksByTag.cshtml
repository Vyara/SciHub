@model SciHub.Web.Areas.Book.ViewModels.Books.BooksByAuthorListViewModel
@{
    ViewBag.Title = "BooksByTag";
}

<h2>BooksByTag</h2>

@Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer })
@foreach (var book in Model.Books)
{

    <div class="row well">
        <h3>@book.Title</h3>
        <p>(@book.PublicationYear)</p>
        <div class="col-md-4">
            <img src="data:image;base64,@Convert.ToBase64String(book.Cover.Image)" style="width: 50%" alt="@book.Title Cover" />
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Details", "Details", "Books", new { id = book.Id }, new { area = "Book" })
        </div>

    </div>
}
