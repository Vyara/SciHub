@model SciHub.Web.Areas.Book.ViewModels.Books.TopBookListViewModel
@{
    ViewBag.Title = "Index";
}

<h2> Top Books</h2>

@foreach (var book in Model.Books)
{

    <div class="row well">
        <h3>@book.Title</h3>
        <p>(@book.PublicationYear)</p>
        <div class="col-md-4">
            <img src="data:image;base64,@Convert.ToBase64String(book.Cover.Image)" style="width: 50%" alt="@book.Title Cover" />
        </div>
        <strong>Author: </strong>
        <p>@book.Author</p>
        <p>Rating: @string.Format("{0:F1}", book.RatingsCount)</p>
        @if (@book.CommentsCount == 1)
        {
            <p>@book.CommentsCount Comment</p>
        }

        else
        {
            <p>@book.CommentsCount Comments</p>
        }
        <div class="col-md-6">
            @Html.ActionLink("Details", "Details", "Books", new { id = book.Id }, new { area = "Book" })
        </div>

    </div>
}