@model SciHub.Web.Areas.Movie.ViewModels.Movies.TopMovieListViewModel
@{
    ViewBag.Title = "Index";
}

<h2> Top Movies</h2>

@foreach (var movie in Model.Movies)
{

    <div class="row well">
        <h3>@movie.Title</h3>
        <p>(@movie.Year)</p>
        <div class="col-md-4">
            <img src="data:image;base64,@Convert.ToBase64String(movie.Poster.Image)" style="width: 50%" alt="@movie.Title Poster" />
        </div>
        <strong>Cast: </strong>
        <p>@movie.LeadActor</p>
        <p>@movie.SupportActor</p>
        <p>Rating: @string.Format("{0:F1}", movie.RatingsCount)</p>
        @if (@movie.CommentsCount == 1)
        {
            <p>@movie.CommentsCount Comment</p>
        }

        else
        {
            <p>@movie.CommentsCount Comments</p>
        }
        <div class="col-md-6">
            @Html.ActionLink("Details", "Details", "Movies", new { id = movie.Id }, new { area = "Movie" })
        </div>

    </div>
}
