@model float

@for (float i = 1; i <= 5; i++)
{
    <div>
        @using (Html.BeginForm("Rate", "TvShows", FormMethod.Post))
        {
            <input type="hidden" name="id" value="@i" />
            <input type="submit" name="points" value="@i" class="btn btn-primary" />
        }
    </div>
}
