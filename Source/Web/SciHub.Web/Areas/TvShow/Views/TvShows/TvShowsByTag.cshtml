@model SciHub.Web.Areas.TvShow.ViewModels.TvShows.TvShowsByActorListViewModel
@{
    ViewBag.Title = "TvShowsByTag";
}

<h2>TvShowsByChannel</h2>

@Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer })
@foreach (var show in Model.TvShows)
{

    <div class="row well">
        <h3>@show.Title</h3>
        @if (@show.EndYear == null)
        {
            <p>(@show.StartYear -  )</p>
        }

        else
        {
            <p>(@show.StartYear - @show.EndYear )</p>
        }
        <div class="col-md-4">
            <img src="data:image;base64,@Convert.ToBase64String(show.Poster.Image)" style="width: 50%" alt="@show.Title Poster" />
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Details", "Details", "TvShows", new { id = show.Id }, new { area = "TvShow" })
        </div>

    </div>
}