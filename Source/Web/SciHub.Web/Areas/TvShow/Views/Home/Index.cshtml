@model SciHub.Web.Areas.TvShow.ViewModels.TvShows.TopTvShowListViewModel
@{
    ViewBag.Title = "All";
}

<h2>All</h2>

@foreach (var show in Model.TvShows)
{

    <div class="row well">
        <h3>@show.Title</h3>
        @if (@show.CommentsCount == 1)
        {
            <p>@show.CommentsCount Comment</p>
        }

        else
        {
            <p>@show.CommentsCount Comments</p>
        }

        <div class="col-md-4">
            <img src="data:image;base64,@Convert.ToBase64String(show.Poster.Image)" style="width: 50%" alt="@show.Title Poster" />
        </div>
        <strong>Cast: </strong>
        <p>@show.LeadActor</p>
        <p>@show.SupportActor</p>
        <p>Rating: @string.Format("{0:F1}", show.RatingsCount)</p>
        @if (@show.CommentsCount == 1)
        {
            <p>@show.CommentsCount Comment</p>
        }

        else
        {
            <p>@show.CommentsCount Comments</p>
        }
        <div class="col-md-6">
            @Html.ActionLink("Details", "Details", "TvShows", new { id = show.Id }, new { area = "TvShow" })
        </div>

    </div>
}
