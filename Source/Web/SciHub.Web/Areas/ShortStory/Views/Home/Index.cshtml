@model SciHub.Web.Areas.ShortStory.ViewModels.ShortStories.TopShortStoryListViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Top Short stories</h2>

@foreach (var story in Model.ShortStories)
{

    <div class="row well">
        <h3>@story.Title</h3>
        <p>Added On: @story.AddedOn</p>
        <strong>Author: </strong>
        <p>@story.Author</p>
        <p>Rating: @string.Format("{0:F1}", story.RatingsCount)</p>
        @if (@story.CommentsCount == 1)
        {
            <p>@story.CommentsCount Comment</p>
        }

        else
        {
            <p>@story.CommentsCount Comments</p>
        }
        <div class="col-md-6">
            @Html.ActionLink("Details", "Details", "ShortStories", new { id = story.Id }, new { area = "ShortStory" })
        </div>

    </div>
}