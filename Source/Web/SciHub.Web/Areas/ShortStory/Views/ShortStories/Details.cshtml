@model SciHub.Web.Areas.ShortStory.ViewModels.ShortStories.ShortStoryDetailsViewModel
@{
    ViewBag.Title = "Details";
}

<h2>@Html.ActionLink("Back To The Stories", "Index", "ShortStories")</h2>

<div class="row well">
    <div class="col-lg-7">
        <h2>@Model.Title</h2>
        <h5>@Model.AddedOn</h5>
        <br />
        <h4>Author:</h4>
        @Html.ActionLink(@Model.Author.Name, "ShortStoriesByAuthor", "ShortStories", new { id = Model.Author.Id }, new { area = "ShortStory" })
        <div class="text-left">
            @Model.Content
        </div>

        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
        <span id="current-rating">@string.Format("{0:F1}", Model.RatingsCount) </span>

        @if (Request.IsAuthenticated)
        {
            <div id="modal-opener" class="btn btn-default">Rate</div>

            <div id="dialog-modal" title="Rate @Model.Title">
                @using (Ajax.BeginForm("Details", "ShortStories", FormMethod.Post, new AjaxOptions { UpdateTargetId = "current-rating", OnSuccess = "onSuccess" }))
                {
                    <div>
                        <fieldset>
                            @for (float i = 1; i <= 5; i++)
                            {
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="submit" name="value" value="@i" class="btn btn-sm" />
                                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                            }
                        </fieldset>
                    </div>
                }
            </div>
        }
        @if (@Model.CommentsCount == 1)
        {
            <h4>@Model.CommentsCount Comment</h4>
        }

        else
        {
            <h4>@Model.CommentsCount Comments</h4>
        }

        @foreach (var tag in Model.Tags)
        {
            <span>@Html.ActionLink("#" + @tag.Name, "ShortStoriesByTag", "ShortStories", new { id = @tag.Id }, new { area = "ShortStory" })</span>
        }
    </div>



</div>
@if (Request.IsAuthenticated)
{
    <div>
        @Ajax.ActionLink("Add a Comment", "Details", "ShortStories", new { id = Model.Id },
            new AjaxOptions
            {
                UpdateTargetId = "holder",
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace
            }, new { @class = "btn btn-info" })
    </div>
}
@foreach (var comment in Model.Comments)
{
    <div class="row well-sm">
        <div class="well-sm">
            @comment.Content
        </div>
        <p>Posted on: @comment.CreatedOn, By: @comment.Author </p>
    </div>
}



@section scripts {
<script>
        $(function () {
            $("#dialog-modal").dialog({
                autoOpen: false,
                width: 330,
                height: 100,
                show: {
                    effect: "scale",
                    duration: 500
                },
                hide: {
                    effect: "scale",
                    duration: 500
                }
            });

            $("#modal-opener").click(function () {
                $("#dialog-modal").dialog("open");
            });
        });

        function onSuccess() {
            $("#dialog-modal").dialog("close");
        }
</script>
}